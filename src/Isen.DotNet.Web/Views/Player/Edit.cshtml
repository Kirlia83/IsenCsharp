@{
    ViewData["Title"] = "Edition d'une joueuse";
}
@using Isen.DotNet.Library.Models
@using Isen.DotNet.Library.Repositories.Interfaces;
@model Player

<h1>Edition d'une joueuse (formulaire)</h1>

<div class="row">
    <div class="col-12">

        <form class="form-group" asp-action="Edit">

            <input type="hidden" asp-for="Id" value="@Model?.Id" />

            <div class="form-group">
                <label for="playerLastName">Nom</label>
                <input id="playerLastName" type="text" class="form-control" placeholder="Last name" asp-for="LastName" value="@Model?.LastName" />
            </div>
            <div class="form-group">
                <label for="playerFirstName">Pr√©nom</label>
                <input id="playerFirstName" type="text" class="form-control" placeholder="First name" asp-for="FirstName" value="@Model?.FirstName" />
            </div>
            @{
                var dateString = Model?.DateOfBirth
                    .GetValueOrDefault(DateTime.MinValue)
                    .ToString("dd/MM/yyyy");
            }
            <div class="form-group">
                <label for="Date">Date de naissance</label>
                <input id="Date" type="date" class="form-control" placeholder="dd/mm/yyyy" asp-for="DateOfBirth" value="@Model?.DateOfBirth">
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-secondary" asp-controller="Player" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>