@{
    ViewData["Title"] = "Edition d'un club";
}
@using Isen.DotNet.Library.Models
@model Club

<h1>Edition d'un club (formulaire)</h1>

<div class="row">
    <div class="col-12">

        <form class="form-group" asp-action="Edit">

            <input type="hidden" asp-for="Id" value="@Model?.Id"/>

            <div class="form-group">
                <label for="clubName">Nom du club</label>
                <input id="clubName" type="text" class="form-control" placeholder="Club name" asp-for="Name" value="@Model?.Name"/> 
            </div>
            <div class="form-group">
                <label for="zipCode">Adresse du club</label>
                <input id="address" type="text" class="form-control" placeholder="Adresse du club" asp-for="Address" value="@Model?.Address"/>
            </div>
            <div class="form-group">
                <label for="logo">Logo du club</label>
                <input id="logo" type="text" class="form-control" placeholder="Logo du club" asp-for="Logo" value="@Model?.Logo"/>
            </div>
            <div class="form-group">
                <label for="latitude">Latitude</label>
                <input id="latitude" type="text" class="form-control" placeholder="Latitude" asp-for="Latitude" value="@Model?.Latitude"/>
            </div>
            <div class="form-group">
                <label for="longitude">Longitude</label>
                <input id="longitude" type="text" class="form-control" placeholder="Longitude" asp-for="Longitude" value="@Model?.Longitude"/>
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-secondary" asp-controller="Club" asp-action="Index">Annuler</a>
        </form>
    </div>
</div>